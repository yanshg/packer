    "sles11sp2_iso_checksum_type": "md5",
    "sles11sp2_autoinst_xml_file": "sles11/sles-11-sp2-x86_64-autoinst.xml",
    "sles11sp2_vmware_os_type": "sles11-64",

    "sles11sp1_iso": "SLES-11-SP1-DVD-x86_64-GM-DVD1.iso",
    "sles11sp1_iso_checksum": "d2e10420f3689faa49a004b60fb396b7",
    "sles11sp1_iso_checksum_type": "md5",
    "sles11sp1_autoinst_xml_file": "sles11/sles-11-sp1-x86_64-autoinst.xml",
    "sles11sp1_vmware_os_type": "sles11-64",

    "base_box_constants": "The constants used to creating base boxes",
    "compression" : "6"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "OpenSUSE_64",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",

      "vm_name": "{{user `hostname`}}",
      "output_directory": "output-{{user `hostname`}}",

      "vboxmanage": [
         ["modifyvm", "{{.Name}}", "--vram", "32"],
         ["modifyvm", "{{.Name}}", "--memory", "512"],
         ["modifyvm", "{{.Name}}", "--cpus", "1"],
         ["storageattach", "{{.Name}}", "--storagectl", "SATA Controller", "--port", "1", "--device", "0", "--type", "dvddrive", "--medium", "{{user `mirror`}}/{{user `sles15_packages_iso`}}" ]
      ],

      "hard_drive_interface" : "sata",
      "disk_size": 40960,
      
      "headless" : 0,

      "iso_url": "{{user `mirror`}}/{{user `sles15_iso`}}",
      "iso_checksum": "{{user `sles15_iso_checksum`}}",
      "iso_checksum_type": "{{user `sles15_iso_checksum_type`}}",

      "http_directory": "http",
      "http_port_min" : 18080,
      "http_port_max" : 18099,

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "shutdown_timeout": "40m",

      "boot_wait": "10s",
      "boot_command": [
        "<esc><enter><wait>",
        "linux netdevice=eth0 netsetup=dhcp install=cd:/<wait>",
        " lang=en_US autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `sles15_autoinst_xml_file`}}<wait>",
        " textmode=1<wait>",
        "<enter><wait>"
      ]
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "{{user `sles15_vmware_os_type`}}",
      "tools_upload_flavor": "linux",

      "vm_name": "{{user `hostname`}}",
      "output_directory": "output-{{user `hostname`}}",

      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "480",
        "numvcpus": "1"
      },

      "disk_size": 40960,
      
      "iso_url": "{{user `mirror`}}/{{user `sles15_iso`}}",
      "iso_checksum": "{{user `sles15_iso_checksum`}}",
      "iso_checksum_type": "{{user `sles15_iso_checksum_type`}}",

      "http_directory": "http",
      "http_port_min" : 18080,
      "http_port_max" : 18099,

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "shutdown_timeout": "40m",

      "boot_wait": "10s",
      "boot_command": [
        "<esc><enter><wait>",
        "linux netdevice=eth0 netsetup=dhcp install=cd:/<wait>",
        " lang=en_US autoyast=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `sles15_autoinst_xml_file`}}<wait>",
        " textmode=1<wait>",
        "<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "BOX_OS=sles15",
        "BOX_PROD=only",
        "BOX_HOSTNAME=sles15only"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/common/sshd.sh",
        "scripts/common/vagrant.sh",
        "scripts/sles/unsupported-modules.sh",
        "scripts/common/vmtools.sh",
        "scripts/sles/sudoers.sh",
        "scripts/products/install_products.sh",
        "scripts/sles/zypper-locks.sh",
        "scripts/sles/remove-dvd-source.sh",
        "scripts/sles/cleanup.sh",
        "scripts/common/minimize.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "../builds/{{.Provider}}/{{user `outputfile`}}",
      "compression_level": "{{user `compression`}}"
    }
  ]
}
